@model List<StdModel>


<form>
    <a href="\Student\Add">Add New User</a>
    <a href="\Student\Update">Update User</a>
    <a href="\Student\Delete">Delete User</a>
</form>

<table>
    <tr>
        @if(Model.Count > 0){

                    @foreach (StdModel item in Model)
                {

                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                }
        }
        else
        {
                <h2>There is no Student Present, please add new user first</h2>
            <form>
                <a href="\Student\Add">Add New User</a>
            </form>
        }
      </tr>  
</table>