@model List<StdModel>


<form class="topLinks">
    <a id="menu" href="\Student\Add">Add New User</a>
    <a id="menu" href="\Student\Update">Update User</a>
    <a id="menu" href="\Student\Delete">Delete User</a>
</form>


<table class="tblData">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
  </tr>
    <tr>
        @if(Model.Count > 0){

                    @foreach (StdModel item in Model)
                {
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                }
        }
        else
        {
                <h3>There is no Student Present, please add new user first</h3>
            <form>
                <a id="menu" href="\Student\Add">Add New User</a>
            </form>
        }
      </tr>  
</table>

